<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" styleClass="login-main-background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.cliente.controller.LoginController">
    <center>
        <HBox alignment="CENTER" spacing="0.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Painel Esquerdo - Informações e Design -->
                <VBox alignment="CENTER" prefHeight="800.0" prefWidth="600.0" styleClass="login-left-panel">
                    <children>
                        <VBox alignment="CENTER" spacing="30.0">
                            <children>
                                <Circle fill="#ffffff" opacity="0.1" radius="80.0" />
                                <VBox alignment="CENTER" spacing="15.0">
                                    <children>
                                        <Text fill="WHITE" styleClass="welcome-title" text="Bem-vindo à" />
                                        <Text fill="WHITE" styleClass="platform-title" text="Plataforma de Tarefas Distribuídas" />
                                        <Text fill="WHITE" opacity="0.8" styleClass="welcome-subtitle" text="Gerencie suas tarefas de forma eficiente e colaborativa" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                    </padding>
                </VBox>

                <!-- Painel Direito - Formulário de Login -->
                <VBox alignment="CENTER" prefHeight="800.0" prefWidth="600.0" styleClass="login-right-panel">
                    <children>
                        <VBox alignment="CENTER" maxWidth="400.0" spacing="30.0" styleClass="login-form-container">
                            <children>
                                <!-- Cabeçalho do Formulário -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text styleClass="login-form-title" text="Entrar na sua conta" />
                                        <Text styleClass="login-form-subtitle" text="Digite suas credenciais para acessar o sistema" />
                                    </children>
                                </VBox>

                                <!-- Campos do Formulário -->
                                <VBox spacing="20.0" VBox.vgrow="NEVER">
                                    <children>
                                        <VBox spacing="8.0">
                                            <children>
                                                <Label styleClass="field-label" text="Usuário" />
                                                <TextField fx:id="usuarioField" prefHeight="50.0" promptText="Digite seu usuário" styleClass="modern-text-field" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="8.0">
                                            <children>
                                                <Label styleClass="field-label" text="Senha" />
                                                <PasswordField fx:id="senhaField" prefHeight="50.0" promptText="Digite sua senha" styleClass="modern-password-field" />
                                            </children>
                                        </VBox>

                                        <!-- Link Esqueci Senha -->
                                        <HBox alignment="CENTER_RIGHT">
                                            <children>
                                                <Hyperlink onAction="#handleForgotPassword" styleClass="forgot-password-link" text="Esqueci minha senha" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Status Label -->
                                <Label fx:id="statusLabel" styleClass="status-label" />

                                <!-- Botão de Login -->
                                <Button maxWidth="1.7976931348623157E308" onAction="#handleLogin" prefHeight="50.0" styleClass="login-button" text="ENTRAR" />

                                <!-- Separador -->
                                <HBox alignment="CENTER" spacing="15.0">
                                    <children>
                                        <Line endX="80.0" opacity="0.3" />
                                        <Text opacity="0.6" styleClass="separator-text" text="ou" />
                                        <Line endX="80.0" opacity="0.3" />
                                    </children>
                                </HBox>

                                <!-- Link para Registro -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text styleClass="register-text" text="Ainda não tem uma conta?" />
                                        <Button onAction="#handleRegistro" prefHeight="45.0" prefWidth="300.0" styleClass="register-button" text="CRIAR CONTA" />
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
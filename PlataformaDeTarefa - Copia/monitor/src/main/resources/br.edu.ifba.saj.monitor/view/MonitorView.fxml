<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.monitor.controller.MonitorController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="Dashboard de Monitoramento do Sistema" textFill="white"><font><Font name="Segoe UI Bold" size="24.0" /></font></Label>
                <Label fx:id="statusOrquestradorLabel" text="Orquestrador: Conectando..." textFill="#27ae60" />
            </children>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.4" style="-fx-background-color: #f4f7fa;">
            <items>
                <VBox spacing="10.0">
                    <padding><Insets top="10" right="5" bottom="10" left="10" /></padding>
                    <children>
                        <Label text="Workers Ativos"><font><Font name="Segoe UI Bold" size="18.0" /></font></Label>
                        <TableView fx:id="tabelaWorkers" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="workerIdCol" prefWidth="250.0" text="ID do Worker" />
                                <TableColumn fx:id="workerStatusCol" prefWidth="100.0" text="Status" />
                                <TableColumn fx:id="workerTarefasCol" prefWidth="100.0" text="Tarefas" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <padding><Insets top="10" right="10" bottom="10" left="5" /></padding>
                    <children>
                        <Label text="Fila de Tarefas (Global)"><font><Font name="Segoe UI Bold" size="18.0" /></font></Label>
                        <TableView fx:id="tabelaTarefas" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="tarefaIdCol" prefWidth="240.0" text="ID da Tarefa" />
                                <TableColumn fx:id="tarefaDescCol" prefWidth="250.0" text="Descrição" />
                                <TableColumn fx:id="tarefaStatusCol" prefWidth="120.0" text="Status" />
                                <TableColumn fx:id="tarefaWorkerCol" prefWidth="150.0" text="Worker" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" minHeight="700.0" minWidth="1000.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.edu.ifba.saj.orquestrador.controller.OrquestradorController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="8.0" style="-fx-background-color: #1a252f; -fx-padding: 15;">
            <children>
                <Label text="Dashboard do Orquestrador" textFill="white">
                    <font><Font name="Segoe UI Bold" size="24.0" /></font>
                </Label>

                <!-- Status Cards - RESPONSIVO -->
                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                    <content>
                        <HBox spacing="15.0" alignment="CENTER_LEFT" minHeight="80.0">
                            <children>
                                <VBox alignment="CENTER" spacing="3.0" minWidth="120.0"
                                      style="-fx-background-color: #2c3e50; -fx-padding: 12; -fx-background-radius: 8;">
                                    <children>
                                        <Label text="Status do Servidor" textFill="#bdc3c7">
                                            <font><Font size="11.0" /></font>
                                        </Label>
                                        <Label fx:id="statusServidorLabel" text="INATIVO" textFill="#e74c3c">
                                            <font><Font name="Segoe UI Bold" size="14.0" /></font>
                                        </Label>
                                    </children>
                                </VBox>

                                <VBox alignment="CENTER" spacing="3.0" minWidth="120.0"
                                      style="-fx-background-color: #2c3e50; -fx-padding: 12; -fx-background-radius: 8;">
                                    <children>
                                        <Label text="Workers Ativos" textFill="#bdc3c7">
                                            <font><Font size="11.0" /></font>
                                        </Label>
                                        <Label fx:id="totalWorkersLabel" text="0" textFill="#3498db">
                                            <font><Font name="Segoe UI Bold" size="14.0" /></font>
                                        </Label>
                                    </children>
                                </VBox>

                                <VBox alignment="CENTER" spacing="3.0" minWidth="120.0"
                                      style="-fx-background-color: #2c3e50; -fx-padding: 12; -fx-background-radius: 8;">
                                    <children>
                                        <Label text="Total de Tarefas" textFill="#bdc3c7">
                                            <font><Font size="11.0" /></font>
                                        </Label>
                                        <Label fx:id="totalTarefasLabel" text="0" textFill="#f39c12">
                                            <font><Font name="Segoe UI Bold" size="14.0" /></font>
                                        </Label>
                                    </children>
                                </VBox>

                                <VBox alignment="CENTER" spacing="3.0" minWidth="120.0"
                                      style="-fx-background-color: #2c3e50; -fx-padding: 12; -fx-background-radius: 8;">
                                    <children>
                                        <Label text="Usuários" textFill="#bdc3c7">
                                            <font><Font size="11.0" /></font>
                                        </Label>
                                        <Label fx:id="totalUsuariosLabel" text="0" textFill="#27ae60">
                                            <font><Font name="Segoe UI Bold" size="14.0" /></font>
                                        </Label>
                                    </children>
                                </VBox>

                                <VBox alignment="CENTER" spacing="3.0" minWidth="120.0"
                                      style="-fx-background-color: #2c3e50; -fx-padding: 12; -fx-background-radius: 8;">
                                    <children>
                                        <Label text="Lamport Clock" textFill="#bdc3c7">
                                            <font><Font size="11.0" /></font>
                                        </Label>
                                        <Label fx:id="lamportClockLabel" text="0" textFill="#9b59b6">
                                            <font><Font name="Segoe UI Bold" size="14.0" /></font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </content>
                </ScrollPane>

                <!-- Control Buttons - RESPONSIVO -->
                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="iniciarServidorBtn" text="Iniciar" onAction="#iniciarServidor" minWidth="80.0"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 12;" />
                        <Button fx:id="pararServidorBtn" text="Parar" onAction="#pararServidor" minWidth="80.0"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 12;" />
                        <Button text="Atualizar" onAction="#atualizarDados" minWidth="80.0"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 12;" />
                        <Button fx:id="limparLogBtn" text="Limpar Log" onAction="#limparLog" minWidth="80.0"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 12;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <!-- LAYOUT RESPONSIVO com SplitPane -->
        <SplitPane dividerPositions="0.65" style="-fx-background-color: #ecf0f1;"
                   SplitPane.resizableWithParent="true">
            <items>
                <!-- Left Panel - Tables -->
                <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
                    <content>
                        <VBox spacing="12.0" minWidth="600.0">
                            <padding><Insets top="12" right="8" bottom="12" left="12" /></padding>
                            <children>
                                <!-- Workers Table - RESPONSIVO -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Workers Ativos" styleClass="section-title">
                                            <font><Font name="Segoe UI Bold" size="16.0" /></font>
                                        </Label>
                                        <TableView fx:id="tabelaWorkers" prefHeight="160.0" minHeight="120.0"
                                                   maxHeight="200.0" VBox.vgrow="SOMETIMES">
                                            <columns>
                                                <TableColumn fx:id="workerIdCol" prefWidth="180.0" minWidth="120.0" text="ID do Worker" />
                                                <TableColumn fx:id="workerStatusCol" prefWidth="80.0" minWidth="60.0" text="Status" />
                                                <TableColumn fx:id="workerTarefasCol" prefWidth="80.0" minWidth="60.0" text="Tarefas" />
                                                <TableColumn fx:id="workerUltimoHeartbeatCol" prefWidth="100.0" minWidth="80.0" text="Último Heartbeat" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </VBox>

                                <!-- Tasks Table - RESPONSIVO -->
                                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label text="Tarefas do Sistema" styleClass="section-title">
                                            <font><Font name="Segoe UI Bold" size="16.0" /></font>
                                        </Label>
                                        <TableView fx:id="tabelaTarefas" prefHeight="250.0" minHeight="180.0"
                                                   VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="tarefaIdCol" prefWidth="100.0" minWidth="80.0" text="ID da Tarefa" />
                                                <TableColumn fx:id="tarefaDescCol" prefWidth="250.0" minWidth="150.0" text="Descrição" />
                                                <TableColumn fx:id="tarefaStatusCol" prefWidth="80.0" minWidth="60.0" text="Status" />
                                                <TableColumn fx:id="tarefaWorkerCol" prefWidth="120.0" minWidth="80.0" text="Worker" />
                                                <TableColumn fx:id="tarefaUsuarioCol" prefWidth="80.0" minWidth="60.0" text="Usuário" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </VBox>

                                <!-- Users Table - RESPONSIVO -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Usuários Registrados" styleClass="section-title">
                                            <font><Font name="Segoe UI Bold" size="16.0" /></font>
                                        </Label>
                                        <TableView fx:id="tabelaUsuarios" prefHeight="120.0" minHeight="100.0"
                                                   maxHeight="150.0" VBox.vgrow="SOMETIMES">
                                            <columns>
                                                <TableColumn fx:id="usuarioNomeCol" prefWidth="150.0" minWidth="100.0" text="Nome" />
                                                <TableColumn fx:id="usuarioStatusCol" prefWidth="100.0" minWidth="80.0" text="Status" />
                                                <TableColumn fx:id="usuarioTarefasCol" prefWidth="80.0" minWidth="60.0" text="Tarefas" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Right Panel - Chart and Log -->
                <VBox spacing="12.0" minWidth="350.0">
                    <padding><Insets top="12" right="12" bottom="12" left="8" /></padding>
                    <children>
                        <!-- Chart Section - RESPONSIVO -->
                        <VBox spacing="5.0" maxHeight="320.0">
                            <children>
                                <Label text="Distribuição de Tarefas" styleClass="section-title">
                                    <font><Font name="Segoe UI Bold" size="16.0" /></font>
                                </Label>
                                <PieChart fx:id="graficoStatusTarefas" prefHeight="250.0" minHeight="200.0"
                                          maxHeight="280.0" />
                            </children>
                        </VBox>

                        <!-- Log Section - RESPONSIVO -->
                        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label text="Linha do Tempo de Eventos" styleClass="section-title">
                                    <font><Font name="Segoe UI Bold" size="16.0" /></font>
                                </Label>

                                <HBox fx:id="healthCheckStatusBox" alignment="CENTER_LEFT" spacing="10" style="-fx-opacity: 0;">
                                    <children>
                                        <Label text="❤️ Verificando Saúde dos Workers..." styleClass="health-check-label"/>
                                    </children>
                                </HBox>

                                <HBox fx:id="syncStatusBox" alignment="CENTER_LEFT" spacing="10" style="-fx-opacity: 0;">
                                    <children>
                                        <Label text="📡 Sincronizando Backups..." styleClass="sync-label"/>
                                        <ProgressBar fx:id="syncProgressBar" prefWidth="200.0" progress="0.0" styleClass="sync-progress-bar" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>

                                <ListView fx:id="logListView" VBox.vgrow="ALWAYS" styleClass="log-list-view"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>